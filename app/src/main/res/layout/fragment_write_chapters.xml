<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/writeChaptersFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="&lt;"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/word_count_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 Word"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="Next"
            android:textColor="#000000"
            android:background="@android:color/transparent"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Main Content Area (White Card) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_card_background"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp">

        <EditText
            android:id="@+id/chapter_title_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter chapter title"
            android:textSize="20sp"
            android:textColorHint="#A0A0A0"
            android:textColor="#000000"
            android:background="@null"
            android:inputType="textCapSentences"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/main_text_edit_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Enter the main text..."
            android:gravity="top|start"
            android:textSize="16sp"
            android:textColorHint="#A0A0A0"
            android:textColor="#000000"
            android:background="@null"
            android:inputType="textMultiLine|textNoSuggestions" />

        <LinearLayout
            android:id="@+id/add_authors_thoughts_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#x270E;"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Author's Thoughts"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&gt;"
            android:textSize="24sp"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>

    <!-- Bottom Toolbar -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#FFFFFF"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/bold_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_weight="1"
        android:text="B"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center" />

    <TextView
        android:id="@+id/italic_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_weight="1"
        android:text="I"
        android:textSize="24sp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:gravity="center" />

    <TextView
        android:id="@+id/save_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_weight="1"
        android:text="&#x1F4BE;"
        android:textSize="24sp"
        android:textColor="#000000"
        android:gravity="center" />

    <TextView
        android:id="@+id/undo_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_weight="1"
        android:text="&#x21BA;"
        android:textSize="24sp"
        android:textColor="#000000"
        android:gravity="center" />

    <TextView
        android:id="@+id/redo_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_weight="1"
        android:text="&#x21BB;"
        android:textSize="24sp"
        android:textColor="#000000"
        android:gravity="center" />
</LinearLayout>

</LinearLayout>