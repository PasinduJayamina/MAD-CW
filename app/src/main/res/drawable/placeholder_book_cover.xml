<?xml version="1.0" encoding="UTF-8"?>
<svg xmlns="http://www.w3.org/2000/svg"
    width="512" height="512"
    viewBox="0 0 512 512"
    role="img" aria-label="Sample icon">
    <!-- Background -->
    <rect width="100%" height="100%" rx="48" ry="48" fill="#ffffff"/>
    <!-- Circle with gradient -->
    <defs>
        <linearGradient id="g" x1="0" x2="1" y1="0" y2="1">
            <stop offset="0" stop-color="#4f9cff"/>
            <stop offset="1" stop-color="#0066cc"/>
        </linearGradient>
        <filter id="shadow" x="-50%" y="-50%" width="200%" height="200%">
            <feDropShadow dx="0" dy="8" stdDeviation="16" flood-color="#000" flood-opacity="0.18"/>
        </filter>
    </defs>

    <!-- Main circle -->
    <g filter="url(#shadow)">
        <circle cx="256" cy="220" r="140" fill="url(#g)"/>
    </g>

    <!-- White checkmark -->
    <path d="M200 220 L240 260 L320 180"
        fill="none" stroke="#ffffff" stroke-width="28" stroke-linecap="round" stroke-linejoin="round"/>

    <!-- Caption text -->
    <text x="50%" y="420" text-anchor="middle" font-family="Segoe UI, Roboto, Arial, sans-serif" font-size="28" fill="#333">
        Upload-ready SVG
    </text>
</svg>